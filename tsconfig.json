{
	"compilerOptions": {
		"target": "ES2017",
		"module": "ESNext",
		"declaration": true,
		"declarationDir": "dist/types",
		"outDir": "dist",
		"rootDir": "src",
		"strict": true,
		"moduleResolution": "node",
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true
	},
	"include": ["src"]
}
